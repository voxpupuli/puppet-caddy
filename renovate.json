{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "addLabels": [
    "renovate",
    "dependencies"
  ],
  "automerge": false,
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "spec/acceptance/*_spec.rb"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>[^\\s]+?)\\s+latest_release\\s*=\\s*['\"]?(?<currentValue>[^'\"]*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["caddyserver/caddy"],
      "labels": [
        "skip-changelog",
        "renovate",
        "dependencies"
      ],
    }
  ]
}
